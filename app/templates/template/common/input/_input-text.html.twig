<input
        type="{{ type }}"
        id="{{ id }}"
        class="input-text {{ class ?? '' }}"
        {% if placeholder is defined and placeholder is not empty %}placeholder="{{ placeholder }}"{% endif %}
        {% if required is defined and required %}required{% endif %}
        {% if disabled is defined and disabled %}disabled{% endif %}
        {% if readonly is defined and readonly %}readonly{% endif %}
        {% if maxlength is defined %}maxlength="{{ maxlength }}"{% endif %}
        {% if minlength is defined %}minlength="{{ minlength }}"{% endif %}
        {% if value is defined and value is not same as(false) %}value="{{ value }}"{% endif %}
/>
