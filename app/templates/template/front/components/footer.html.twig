<div class="modals-container">
    <div class="modal-login modal" id="modal-login" role="dialog" aria-modal="true" aria-labelledby="modal-login-title" hidden>
        <div class="modal-wrapper">
            <div class="modal-content">
                <h2 id="modal-login-title" class="modal-title">Войти в личный кабинет</h2>
                <form class="modal-form login-form" method="post" action="/login">
                    {% include 'template/common/input/_input-text.html.twig' with {
                        id: 'login-email',
                        type: 'email',
                        name: 'email',
                        placeholder: 'Введите e-mail',
                        class: 'login-email',
                        required: true,
                        autocomplete: 'email'
                    } %}
                    {% include 'template/common/input/_input-text.html.twig' with {
                        id: 'login-password',
                        type: 'password',
                        name: 'password',
                        placeholder: 'Введите пароль',
                        class: 'login-password',
                        required: true,
                        autocomplete: 'current-password'
                    } %}
                    <button type="submit" class="btn btn-login">Войти</button>
                    <button type="button" class="btn" data-fancybox data-src="#modal-register">Регистрация</button>
                    <button type="button" class="btn btn-forgot-password">Забыли пароль?</button>
                </form>
                <form class="modal-form reset-password-form hidden" method="post" action="/password-reset">
                    {% include 'template/common/input/_input-text.html.twig' with {
                        id: 'reset-password-email',
                        type: 'email',
                        name: 'email',
                        placeholder: 'Введите e-mail',
                        class: 'reset-password-email',
                        required: true,
                        autocomplete: 'email'
                    } %}
                    <button type="submit" class="btn btn-reset-password">Восстановить</button>
                </form>
            </div>
        </div>
    </div>

    <div class="modal-register modal" id="modal-register" role="dialog" aria-modal="true" aria-labelledby="modal-register-title" hidden>
        <div class="modal-wrapper">
            <div class="modal-content">
                <h2 id="modal-register-title" class="modal-title">Регистрация</h2>
                <form class="modal-form register-form" method="post" action="/register">
                    {% include 'template/common/input/_input-text.html.twig' with {
                        id: 'register-first-name',
                        type: 'text',
                        name: 'first_name',
                        placeholder: 'Ваше имя',
                        class: 'register-first-name',
                        required: true,
                        autocomplete: 'given-name'
                    } %}
                    {% include 'template/common/input/_input-text.html.twig' with {
                        id: 'register-email',
                        type: 'email',
                        name: 'email',
                        placeholder: 'Ваш e-mail',
                        class: 'register-email',
                        required: true,
                        autocomplete: 'email'
                    } %}
                    {% include 'template/common/input/_input-text.html.twig' with {
                        id: 'register-password',
                        type: 'password',
                        name: 'password',
                        placeholder: 'Придумайте пароль',
                        class: 'register-password',
                        required: true,
                        autocomplete: 'new-password'
                    } %}
                    {% include 'template/common/input/_input-text.html.twig' with {
                        id: 'register-password-confirm',
                        type: 'password',
                        name: 'password_confirmation',
                        placeholder: 'Подтвердите пароль',
                        class: 'register-password-confirm',
                        required: true,
                        autocomplete: 'new-password'
                    } %}
                    <button type="submit" class="btn btn-register">Зарегистрироваться</button>
                </form>
                <form class="modal-form verify-code-wrap hidden" method="post" action="/verify-code">
                    {% include 'template/common/input/_input-text.html.twig' with {
                        id: 'verify-code',
                        type: 'text',
                        name: 'code',
                        class: 'verify-code',
                        placeholder: 'Код подтверждения',
                        maxlength: 6,
                        required: true,
                        autocomplete: 'one-time-code'
                    } %}
                    {% include 'template/common/input/_input-text.html.twig' with {
                        id: 'user-guid',
                        type: 'hidden',
                        name: 'user_guid',
                        class: 'user-guid',
                    } %}
                    <button type="submit" class="btn btn-verify-code">Подтвердить код</button>
                </form>
            </div>
        </div>
    </div>
</div>

